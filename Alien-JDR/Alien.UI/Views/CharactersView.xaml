        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Hidden">
            <WrapPanel Orientation="Horizontal">

                <ItemsControl ItemsSource="{Binding CharacterMiniatures}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Width="150" Height="150" Background="Red" CornerRadius="10" Margin="5">
                                <StackPanel>
                                    <Image Source="{Binding ImagePath}" />
                                    <TextBlock Text="{Binding Name}" />
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <Border Width="150" Height="150" Background="Red" CornerRadius="10"/>

                <Border Width="150" Height="150" Background="Red" CornerRadius="10" Margin="15,0,0,0"/>

                <Border Width="150" Height="150" Background="Red" CornerRadius="10" Margin="15,0,0,0"/>

                <Border Width="150" Height="150" Background="Red" CornerRadius="10" Margin="15,0,0,0">

                    <Button Width="150" Content="+" FontSize="150" 
                            VerticalAlignment="Center" HorizontalAlignment="Center"
                            VerticalContentAlignment="Center" HorizontalContentAlignment="Center"
                            Command="{Binding NavigateCreateCharacterCommand}"/>
                </Border>

            </WrapPanel>
        </ScrollViewer>
    </Grid>

    <behavior:Interaction.Triggers>
        <behavior:EventTrigger EventName="Loaded">
            <prism:InvokeCommandAction Command="{Binding LoadCommand}"/>
        </behavior:EventTrigger>
    </behavior:Interaction.Triggers>

