<UserControl   x:Class="Alien.UI.Views.RegistrationView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:prism="http://prismlibrary.com/"
        prism:ViewModelLocator.AutoWireViewModel="True"
        xmlns:helper="clr-namespace:Alien.UI.Helpers"
        xmlns:local="clr-namespace:Alien.UI.Views" 
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        mc:Ignorable="d" 
        d:DesignHeight="540" d:DesignWidth="960" Loaded="UserControl_Loaded">

    <prism:Dialog.WindowStyle>
        <Style TargetType="Window">
            <Setter Property="prism:Dialog.WindowStartupLocation" Value="CenterScreen"/>
            <Setter Property="WindowStyle" Value="None" />
            <Setter Property="AllowsTransparency" Value="True" />
            <Setter Property="Height" Value="540" />
            <Setter Property="Width" Value="960" />
        </Style>
    </prism:Dialog.WindowStyle>
    <!--Title="RegistrationView"
        AllowsTransparency="True"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"

    <Window.Background>
        <ImageBrush ImageSource="/Images/AlienRegistration.jpg"/>
    </Window.Background>-->

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="pack://application:,,,/Images/AlienRegistration.jpg"/>
        </Grid.Background>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="480"/>
            <ColumnDefinition Width="480"/>

        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <!--<Border CornerRadius="100"/>-->

        <DockPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Background="Transparent" MouseDown="DockPanel_MouseDown">

            <Button x:Name="CloseButton" 
                    Style="{StaticResource CustomFont}" 
                    Content="x" 
                    VerticalAlignment="Top" 
                    HorizontalAlignment="Right"
                    Width="25" Height="25"/>

        </DockPanel>

        <StackPanel Grid.Row="1" Grid.Column="1">
            <TextBlock Text="ENREGISTREMENT"
                       Style="{DynamicResource CustomFont}"
                       FontWeight="Light"
                       FontSize="35" 
                       Foreground="White"
                       HorizontalAlignment="Center"/>

            <DockPanel HorizontalAlignment="Center" >
                <TextBox x:Name="txbUsername" Style="{StaticResource CustomFont}"
                         FontWeight="Light" FontSize="20"
                         Text="{Binding Registration.Username}"
                         HorizontalAlignment="Center" HorizontalContentAlignment="Left"
                         Foreground="White" Background="Transparent"
                         BorderThickness="0" Margin="0,30,0,0"
                         Width="400" Height="25" GotFocus="txbUsername_GotFocus"
                         >
                </TextBox>

                <iconPacks:PackIconMaterial Kind="Account"
                                           VerticalAlignment="Center" 
                                           HorizontalAlignment="Left"
                                                Margin="0,25,0,0"
                                           Foreground="White"/>
            </DockPanel>

            <Border Width="450"
                    Height="2"
                    Background="White"
                    Opacity="0.5"/>

            <DockPanel HorizontalAlignment="Center" >
                <TextBox Style="{StaticResource CustomFont}"
                         FontWeight="Light"
                         Text="{Binding Registration.LastName}"
                         FontSize="20"
                         HorizontalAlignment="Center"
                         Foreground="White"
                         Background="Transparent"
                         BorderThickness="0"
                         Width="400"
                         HorizontalContentAlignment="Left"
                         Height="25"
                         Margin="0,30,0,0">
                </TextBox>

                <iconPacks:PackIconMaterial Kind="Account"
                                           VerticalAlignment="Center" 
                                           HorizontalAlignment="Left"
                                                Margin="0,25,0,0"
                                           Foreground="White"/>
            </DockPanel>


            <Border Width="450"
                    Height="2"
                    Background="White"
                    Opacity="0.5"/>

            <DockPanel HorizontalAlignment="Center" >
                <TextBox Style="{StaticResource CustomFont}"
                         FontWeight="Light"
                         Text="{Binding Registration.FirstName}"
                         FontSize="20"
                         HorizontalAlignment="Center"
                         Foreground="White"
                         Background="Transparent"
                         BorderThickness="0"
                         Width="400"
                         HorizontalContentAlignment="Left"
                         Height="25"
                         Margin="0,30,0,0">
                </TextBox>

                <iconPacks:PackIconMaterial Kind="Account"
                                           VerticalAlignment="Center" 
                                           HorizontalAlignment="Left"
                                                Margin="0,25,0,0"
                                           Foreground="White"/>
            </DockPanel>

            <Border Width="450"
                    Height="2"
                    Background="White"
                    Opacity="0.5"/>

            <DockPanel HorizontalAlignment="Center" >
                <TextBox Style="{StaticResource CustomFont}"
                         FontWeight="Light"
                         Text="{Binding Registration.Email}"
                         FontSize="20"
                         HorizontalAlignment="Center"
                         Foreground="White"
                         Background="Transparent"
                         BorderThickness="0"
                         Width="400"
                         HorizontalContentAlignment="Left"
                         Height="25"
                         Margin="0,30,0,0">
                </TextBox>

                <iconPacks:PackIconMaterial Kind="Mail"
                                           VerticalAlignment="Center" 
                                           HorizontalAlignment="Left"
                                                Margin="0,25,0,0"
                                           Foreground="White"/>
            </DockPanel>

            <Border Width="450"
                    Height="2"
                    Background="White"
                    Opacity="0.5"/>

            <DockPanel HorizontalAlignment="Center" >
                <PasswordBox  Style="{StaticResource CustomFont}"
                              helper:PasswordBoxHelper.Attach="True"
                              helper:PasswordBoxHelper.Password="{Binding Registration.Password, Mode=TwoWay}"
                         FontWeight="Light"
                         Password="admin"
                         FontSize="20"
                         HorizontalAlignment="Center"
                         Foreground="White"
                         Background="Transparent"
                         BorderThickness="0"
                         Width="400"
                         HorizontalContentAlignment="Left"
                         Height="25"
                         Margin="0,30,0,0">
                </PasswordBox>

                <iconPacks:PackIconMaterial Kind="FormTextboxPassword"
                                           VerticalAlignment="Center" 
                                           HorizontalAlignment="Left"
                                                Margin="0,25,0,0"
                                           Foreground="White"/>
            </DockPanel>

            <Border Width="450"
                    Height="2"
                    Background="White"
                    Opacity="0.5"/>

            <DockPanel Margin="0,40,0,0" HorizontalAlignment="Center">
                <Button Width="200" Height="40" Content="s'enregistrer" Margin="20" Style="{StaticResource CustomFont}" Command="{Binding RegisterAccountCommand}"/>
                <Button Width="200" Height="40" Content="Retour a l'authentification"   Style="{StaticResource CustomFont}" Command="{Binding NavigateBackToLoginCommand}"/>
            </DockPanel>
            <DockPanel>
                <ListView ItemsSource="{Binding Registration.ValidationResults}">

                </ListView>
            </DockPanel>

        </StackPanel>

    </Grid>
</UserControl>
