<Window x:Class="Alien.UI.Views.ShellView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:prism="http://prismlibrary.com/"
        xmlns:local="clr-namespace:Alien.UI.Views"
        xmlns:viewModels="clr-namespace:Alien.UI.ViewModels"
        mc:Ignorable="d"
        Title="ShellView"
        Height="1920" Width="1080"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        MouseDown="Window_MouseDown"
        WindowState="Maximized"
        MinHeight="600"
        MinWidth="400">


    <!--<Window.DataContext>
        <viewModels:ShellViewModel/>
    </Window.DataContext>-->

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="C:\Users\David\Source\Repos\Alien-jdr\Alien-JDR\Alien.UI\Images\alienMainUI.jpg"/>
        </Grid.Background>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="75"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>


        <StackPanel Grid.Row="0" Grid.ColumnSpan="2" Orientation="Vertical">

            <DockPanel HorizontalAlignment="Right">

                <Button x:Name="MinimizeButton" 
                        Content="_" 
                        VerticalAlignment="Top" 
                        HorizontalAlignment="Right"
                        FontFamily="Alenia"
                        Click="MinimizeButton_Click"
                        Margin="5"
                        FontSize="20"/>

                <Button x:Name="MaximizeButton"
                        Content="m"
                        VerticalAlignment="Top"
                        HorizontalAlignment="Right"
                        FontFamily="Alenia"
                        Click="MaximizeButton_Click"
                        Margin="5"
                        FontSize="20"/>

                <Button x:Name="CloseButton" 
                        Content="x" 
                        VerticalAlignment="Top" 
                        HorizontalAlignment="Right"
                        FontFamily="Alenia"
                        Click="CloseButton_Click"
                        Margin="5"
                        FontSize="20"/>

            </DockPanel>

        </StackPanel>



        <TextBlock Text="ALIEN"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Left"
                       Foreground="White"
                       FontSize="25"
                       FontFamily="Alenia"
                       Margin="20,0,0,0"/>

        <StackPanel Grid.Row="1">

            <RadioButton Content="Personnages"
                             Height="50"
                             Foreground="White"
                             FontSize="14"
                             Style="{StaticResource MenuButtonTheme}"
                             FontFamily="C:\Users\David\Source\Repos\Alien-jdr\Alien-JDR\Alien.UI\Fonts\Alenia.otf"
                             Command="{Binding CharacterHomeViewCommand}"
                             IsChecked="True"/>

            <RadioButton Content="Parties"
                             Height="50"
                             Foreground="White"
                             FontSize="14"
                             Style="{StaticResource MenuButtonTheme}"
                             FontFamily="C:\Users\David\Source\Repos\Alien-jdr\Alien-JDR\Alien.UI\Fonts\Alenia.otf"
                             Command="{Binding GamesViewCommand}"/>

            <RadioButton Content="Historique"
                             Height="50"
                             Foreground="White"
                             FontSize="14"
                             Style="{StaticResource MenuButtonTheme}"
                             FontFamily="Fonts/#Alenia"/>

            <RadioButton Content="Notifications"
                             Height="50"
                             Foreground="White"
                             FontSize="14"
                             Style="{StaticResource MenuButtonTheme}"
                             FontFamily="Fonts/#Alenia"/>

        </StackPanel>

        <WrapPanel Grid.Row="1"
                    Grid.Column="1">

            <ContentControl Margin="10"
                            Content="{Binding CurrentView}"/>

        </WrapPanel>


    </Grid>

</Window>
    
