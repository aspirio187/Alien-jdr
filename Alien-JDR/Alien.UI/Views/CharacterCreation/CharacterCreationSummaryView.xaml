<ContentControl x:Class="Alien.UI.Views.CharacterCreationSummaryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Alien.UI.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Row="0" 
                    Orientation="Horizontal" 
                    Grid.ColumnSpan="2"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Margin="10">

            <TextBlock Style="{StaticResource CustomFont}"
                       Foreground="White"
                       FontSize="25">
                Recapitulatif
            </TextBlock>

        </StackPanel>

        <StackPanel Grid.Row="1" 
                    Orientation="Horizontal" 
                    Margin="10"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">

            <TextBlock Style="{StaticResource CustomFont}"
                       Foreground="White"
                       FontSize="20">
                Carriere
            </TextBlock>

        </StackPanel>

        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    Margin="10"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">

            <TextBlock Style="{StaticResource CustomFont}"
                       Foreground="White"
                       FontSize="20">
                Race
            </TextBlock>

        </StackPanel>

        <StackPanel Grid.Row="3" 
                    Orientation="Horizontal" 
                    Margin="10"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">

            <TextBlock Style="{StaticResource CustomFont}"
                       Foreground="White"
                       FontSize="20">
                Talent
            </TextBlock>

        </StackPanel>

        <StackPanel Grid.Row="4" 
                    Orientation="Horizontal" 
                    Margin="10"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">

            <TextBlock Style="{StaticResource CustomFont}"
                       Foreground="White"
                       FontSize="20">
                Attributs
            </TextBlock>

        </StackPanel>

        <StackPanel Grid.Row="5" 
                    Orientation="Horizontal" 
                    Margin="10"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">

            <TextBlock Style="{StaticResource CustomFont}"
                       Foreground="White"
                       FontSize="20">
                Combetences
            </TextBlock>

        </StackPanel>

        <StackPanel Grid.Row="1" 
                    Grid.Column="1"
                    Orientation="Horizontal" 
                    Margin="10"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">

            <TextBlock Style="{StaticResource CustomFont}"
                       Foreground="White"
                       FontSize="20">
                Binding
            </TextBlock>

        </StackPanel>

        <StackPanel Grid.Row="2" 
                    Grid.Column="1"
                    Orientation="Horizontal" 
                    Margin="10"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">

            <TextBlock Style="{StaticResource CustomFont}"
                       Foreground="White"
                       FontSize="20">
                Binding
            </TextBlock>

        </StackPanel>

        <StackPanel Grid.Row="3" 
                    Grid.Column="1"
                    Orientation="Horizontal" 
                    Margin="10"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">

            <TextBlock Style="{StaticResource CustomFont}"
                       Foreground="White"
                       FontSize="20">
                Binding
            </TextBlock>

        </StackPanel>

        <StackPanel Grid.Row="4" 
                    Grid.Column="1"
                    Orientation="Horizontal" 
                    Margin="10"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">

            <TextBlock Style="{StaticResource CustomFont}"
                       Foreground="White"
                       FontSize="20">
                Binding
            </TextBlock>

        </StackPanel>

        <StackPanel Grid.Row="5" 
                    Grid.Column="1"
                    Orientation="Horizontal" 
                    Margin="10"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">

            <TextBlock Style="{StaticResource CustomFont}"
                       Foreground="White"
                       FontSize="20">
                Binding
            </TextBlock>

        </StackPanel>



        <StackPanel Grid.Row="6" 
                    Orientation="Horizontal" 
                    Margin="10"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">

            <Button Width="200" Height="40" Content="Retour"   Style="{StaticResource CustomFont}"/>

        </StackPanel>

        <StackPanel Grid.Row="6" 
                    Grid.Column="1"
                    Orientation="Horizontal" 
                    Margin="10"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">

            <Button Width="200" Height="40" Content="Terminer"   Style="{StaticResource CustomFont}"/>

        </StackPanel>





    </Grid>
</ContentControl>
