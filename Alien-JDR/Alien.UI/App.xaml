<prism:PrismApplication x:Class="Alien.UI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:viewModels="clr-namespace:Alien.UI.ViewModels"
             xmlns:views="clr-namespace:Alien.UI.Views">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!--<ResourceDictionary Source="ButtonTheme.xaml"/>-->
                <ResourceDictionary Source="Theme/MenuButtonTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <DataTemplate DataType="{x:Type ViewModels:CharacterHomeViewModel}">
                <views:CharacterHomeView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type ViewModels:GameViewModel}">
                <views:GamesView/>
            </DataTemplate>




        </ResourceDictionary>
    </Application.Resources>
</prism:PrismApplication>
