                </StackPanel>

                <TextBlock
                    Grid.Row="4"
                    Grid.Column="0"
                    FontSize="30"
                    Foreground="White"
                    Style="{StaticResource CustomFont}"
                    Text="Pilotage (Agilite)"
                    TextAlignment="Center" />

                <StackPanel
                    Grid.Row="4"
                    Grid.Column="1"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">

                    <Button
                        Width="30"
                        Height="30"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Command="{Binding DecreaseCompetenceCommand}"
                        CommandParameter="{x:Static global:Competences.Piloting}"
                        Content="-"
                        FontSize="25"
                        Style="{StaticResource CustomFont}" />

                    <TextBlock
                        Margin="10,0,10,0"
                        FontFamily="arial black"
                        FontSize="25"
                        Foreground="White"
                        Text="{Binding CharacterAttributesCompetences.Piloting}" />

                    <Button
                        Width="30"
                        Height="30"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Command="{Binding IncreaseCompetenceCommand}"
                        CommandParameter="{x:Static global:Competences.Piloting}"
                        Content="+"
                        FontSize="25"
                        Style="{StaticResource CustomFont}" />
                </StackPanel>

                <TextBlock
                    Grid.Row="5"
                    Grid.Column="0"
                    FontSize="30"
                    Foreground="White"
                    Style="{StaticResource CustomFont}"
