                        Content="-"
                        FontSize="25"
                        Style="{StaticResource CustomFont}" />

                    <TextBlock
                        Margin="10,0,10,0"
                        FontFamily="arial black"
                        FontSize="25"
                        Foreground="White"
                        Text="{Binding CharacterAttributesCompetences.Stamina}" />

                    <Button
                        Width="30"
                        Height="30"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Command="{Binding IncreaseCompetenceCommand}"
                        CommandParameter="{x:Static global:Competences.Stamina}"
                        Content="+"
                        FontSize="25"
                        Style="{StaticResource CustomFont}" />
                </StackPanel>

                <TextBlock
                    Grid.Row="2"
                    Grid.Column="0"
                    FontSize="30"
                    Foreground="White"
                    Style="{StaticResource CustomFont}"
