                    <Button
                        Width="30"
                        Height="30"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Command="{Binding IncreaseCompetenceCommand}"
                        CommandParameter="{x:Static global:Competences.Survival}"
                        Content="+"
                        FontSize="25"
                        Style="{StaticResource CustomFont}" />
                </StackPanel>

                <TextBlock
                    Grid.Row="9"
                    Grid.Column="0"
                    FontSize="30"
                    Foreground="White"
                    Style="{StaticResource CustomFont}"
                    Text="Manipulation (Empathie)"
                    TextAlignment="Center" />

                <StackPanel
                    Grid.Row="9"
                    Grid.Column="1"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">

                    <Button
                        Width="30"
                        Height="30"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
