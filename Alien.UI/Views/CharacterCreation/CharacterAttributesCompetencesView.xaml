    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:global="clr-namespace:Alien.UI.Helpers"
    xmlns:local="clr-namespace:Alien.UI.Views"
    xmlns:locator="clr-namespace:Alien.UI.Locators"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    locator:ViewModelLocator.AutoConnectedViewModelProperty="True"
    Background="Black"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <TextBlock
                Margin="10"
                HorizontalAlignment="Center"
                FontSize="40"
                Foreground="White"
                Style="{StaticResource CustomFont}"
                Text="Attributs" />

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <TextBlock
                    Grid.Row="0"
                    Grid.Column="0"
                    FontSize="30"
                    Foreground="White"
                    Style="{StaticResource CustomFont}"
                    Text="Force"
                    TextAlignment="Center" />

                <StackPanel
                    Grid.Row="0"
                    Grid.Column="1"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">

                    <Button
                        Width="30"
                        Height="30"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Command="{Binding DecreaseAttributeCommand}"
                        CommandParameter="{x:Static global:Attributes.Force}"
                        Content="-"
                        FontSize="25"
                        Style="{StaticResource CustomFont}" />

                    <TextBlock
                        Margin="10,0,10,0"
                        FontFamily="arial black"
                        FontSize="30"
                        Foreground="White"
                        Text="{Binding CharacterAttributesCompetences.Strength}" />

                    <Button
                        Width="30"
                        Height="30"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Command="{Binding IncreaseAttributeCommand}"
                        CommandParameter="{x:Static global:Attributes.Force}"
                        Content="+"
                        FontSize="25"
                        Style="{StaticResource CustomFont}" />
                </StackPanel>

                <TextBlock
                    Grid.Row="1"
                    Grid.Column="0"
                    FontSize="30"
                    Foreground="White"
                    Style="{StaticResource CustomFont}"
                    Text="Agilite"
                    TextAlignment="Center" />

                <StackPanel
                    Grid.Row="1"
                    Grid.Column="1"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">

                    <Button
                        Width="30"
                        Height="30"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Command="{Binding DecreaseAttributeCommand}"
                        CommandParameter="{x:Static global:Attributes.Agilité}"
                        Content="-"
                        FontSize="25"
                        Style="{StaticResource CustomFont}" />

                    <TextBlock
                        Margin="10,0,10,0"
                        FontFamily="arial black"
                        FontSize="30"
                        Foreground="White"
                        Text="{Binding CharacterAttributesCompetences.Agility}" />

                    <Button
                        Width="30"
                        Height="30"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Command="{Binding IncreaseAttributeCommand}"
                        CommandParameter="{x:Static global:Attributes.Agilité}"
                        Content="+"
                        FontSize="25"
                        Style="{StaticResource CustomFont}" />
                </StackPanel>

                <TextBlock
                    Grid.Row="2"
                    Grid.Column="0"
                    FontSize="30"
                    Foreground="White"
                    Style="{StaticResource CustomFont}"
                    Text="Esprit"
                    TextAlignment="Center" />

                <StackPanel
                    Grid.Row="2"
                    Grid.Column="1"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">

                    <Button
                        Width="30"
                        Height="30"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Command="{Binding DecreaseAttributeCommand}"
                        CommandParameter="{x:Static global:Attributes.Esprit}"
                        Content="-"
                        FontSize="25"
                        Style="{StaticResource CustomFont}" />

                    <TextBlock
                        Margin="10,0,10,0"
                        FontFamily="arial black"
                        FontSize="30"
                        Foreground="White"
                        Text="{Binding CharacterAttributesCompetences.Mind}" />

                    <Button
                        Width="30"
                        Height="30"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Command="{Binding IncreaseAttributeCommand}"
                        CommandParameter="{x:Static global:Attributes.Esprit}"
                        Content="+"
                        FontSize="25"
                        Style="{StaticResource CustomFont}" />
                </StackPanel>

                <TextBlock
                    Grid.Row="3"
                    Grid.Column="0"
                    FontSize="30"
                    Foreground="White"
                    Style="{StaticResource CustomFont}"
                    Text="Empathie"
                    TextAlignment="Center" />

                <StackPanel
                    Grid.Row="3"
                    Grid.Column="1"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">

                    <Button
                        Width="30"
                        Height="30"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Command="{Binding DecreaseAttributeCommand}"
                        CommandParameter="{x:Static global:Attributes.Empathie}"
                        Content="-"
                        FontSize="25"
                        Style="{StaticResource CustomFont}" />

                    <TextBlock
                        Margin="10,0,10,0"
                        FontFamily="arial black"
                        FontSize="30"
                        Foreground="White"
                        Text="{Binding CharacterAttributesCompetences.Empathy}" />

                    <Button
                        Width="30"
                        Height="30"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Command="{Binding IncreaseAttributeCommand}"
                        CommandParameter="{x:Static global:Attributes.Empathie}"
                        Content="+"
                        FontSize="25"
                        Style="{StaticResource CustomFont}" />
                </StackPanel>
            </Grid>

            <DockPanel Margin="10" HorizontalAlignment="Right">
                <TextBlock
                    FontSize="30"
                    Foreground="White"
                    Style="{StaticResource CustomFont}"
                    Text="points d'attributs restants :" />
                <TextBlock
                    Width="50"
                    FontFamily="arial black"
                    FontSize="30"
                    FontWeight="Bold"
                    Foreground="White"
                    Text="{Binding AttributePoints}"
                    TextAlignment="Center" />
            </DockPanel>
        </StackPanel>

        <StackPanel Grid.Row="1">
            <TextBlock
                Margin="10"
                HorizontalAlignment="Center"
                FontSize="40"
                Foreground="White"
                Style="{StaticResource CustomFont}"
                Text="competences" />

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <TextBlock
                    Grid.Row="0"
                    Grid.Column="0"
                    FontSize="30"
                    Foreground="White"
                    Style="{StaticResource CustomFont}"
                    Text="Machines lourdes (Force)"
                    TextAlignment="Center" />

                <StackPanel
                    Grid.Row="0"
                    Grid.Column="1"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">

                    <Button
                        Width="30"
                        Height="30"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Command="{Binding DecreaseCompetenceCommand}"
                        CommandParameter="{x:Static global:Competences.HeavyMachines}"
                        Content="-"
                        FontSize="25"
                        Style="{StaticResource CustomFont}" />

                    <TextBlock
                        Margin="10,0,10,0"
                        FontFamily="arial black"
                        FontSize="25"
                        Foreground="White"
