                    <Button
                        Width="30"
                        Height="30"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Command="{Binding IncreaseCompetenceCommand}"
                        CommandParameter="{x:Static global:Competences.RangeCombat}"
                        Content="+"
                        FontSize="25"
                        Style="{StaticResource CustomFont}" />
                </StackPanel>

                <TextBlock
                    Grid.Row="6"
                    Grid.Column="0"
                    FontSize="30"
                    Foreground="White"
                    Style="{StaticResource CustomFont}"
                    Text="Observation (Esprit)"
                    TextAlignment="Center" />

                <StackPanel
                    Grid.Row="6"
                    Grid.Column="1"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">

                    <Button
                        Width="30"
                        Height="30"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Command="{Binding DecreaseCompetenceCommand}"
                        CommandParameter="{x:Static global:Competences.Observation}"
                        Content="-"
                        FontSize="25"
                        Style="{StaticResource CustomFont}" />

                    <TextBlock
                        Margin="10,0,10,0"
                        FontFamily="arial black"
                        FontSize="25"
                        Foreground="White"
                        Text="{Binding CharacterAttributesCompetences.Observation}" />

                    <Button
                        Width="30"
                        Height="30"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Command="{Binding IncreaseCompetenceCommand}"
                        CommandParameter="{x:Static global:Competences.Observation}"
                        Content="+"
                        FontSize="25"
                        Style="{StaticResource CustomFont}" />
                </StackPanel>

                <TextBlock
                    Grid.Row="7"
                    Grid.Column="0"
                    FontSize="30"
                    Foreground="White"
                    Style="{StaticResource CustomFont}"
                    Text="Comtech (Esprit)"
                    TextAlignment="Center" />

                <StackPanel
                    Grid.Row="7"
                    Grid.Column="1"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">

                    <Button
                        Width="30"
                        Height="30"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Command="{Binding DecreaseCompetenceCommand}"
                        CommandParameter="{x:Static global:Competences.Comtech}"
                        Content="-"
                        FontSize="25"
