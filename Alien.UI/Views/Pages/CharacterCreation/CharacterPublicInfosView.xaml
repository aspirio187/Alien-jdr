                            Margin="10,0,10,0"
                            FontFamily="arial black"
                            FontSize="20"
                            Foreground="White"
                            Text="{Binding PublicCharacter.MedicalCare}" />

                        <Button
                            Width="20"
                            Height="20"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Command="{Binding IncreaseCompetenceCommand}"
                            CommandParameter="{x:Static global:Competences.MedicalCare}"
                            Content="+"
                            FontSize="15"
                            Style="{StaticResource CustomFont}" />
                    </DockPanel>
                </DockPanel>

                <DockPanel Margin="10" HorizontalAlignment="Right">
                    <TextBlock
                        HorizontalAlignment="Right"
                        FontSize="22"
                        Foreground="White"
                        Style="{StaticResource CustomFont}"
                        Text="points de competence restants :" />
                    <TextBlock
                        Width="50"
                        FontFamily="arial black"
                        FontSize="22"
                        FontWeight="Bold"
                        Foreground="White"
                        Text="{Binding CompetencePoints}"
                        TextAlignment="Center" />
                </DockPanel>
            </StackPanel>
        </DockPanel>

        <DockPanel
            Grid.Row="6"
            Grid.Column="0"
            Grid.ColumnSpan="3"
            Margin="30">
            <Button
                Width="200"
                Height="40"
                HorizontalAlignment="Left"
                Command="{Binding NavigateBackCommand}"
                Content="Retour"
                Foreground="Black"
                Style="{StaticResource CustomFont}" />
            <Button
                Width="200"
                Height="40"
                HorizontalAlignment="Right"
                Command="{Binding CreatePublicCharacterCommand}"
                Content="Terminer"
                Foreground="Black"
                Style="{StaticResource CustomFont}" />
        </DockPanel>
    </Grid>
</ContentControl>
