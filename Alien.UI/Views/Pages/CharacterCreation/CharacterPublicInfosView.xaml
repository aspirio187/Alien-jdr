                        <TextBlock
                            MinWidth="150"
                            Margin="5"
                            VerticalAlignment="Center"
                            FontSize="20"
                            Foreground="white"
                            Style="{StaticResource CustomFont}"
                            Text="Force"
                            TextAlignment="Center" />

                        <DockPanel Margin="5">

                            <Button
                                Width="20"
                                Height="20"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Command="{Binding DecreaseAttributeCommand}"
                                CommandParameter="{x:Static global:Attributes.Force}"
                                Content="-"
                                FontSize="15"
                                Style="{StaticResource CustomFont}" />

                            <TextBlock
